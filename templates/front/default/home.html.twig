{% extends 'base.html.twig' %}

{% block title %}H2O Canyon | Accueil{% endblock %}

{% block content %}

{% if is_granted('ROLE_ADMIN') %}
<div class="modal fade" id="modalAdmin" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content background">
            <div class="modal-body">
                <h5 class="modal-title text-center" id="exampleModalLongTitle">
                    Bonjour {{ app.user.firstName ~ ' ' ~ app.user.lastName }} !
                </h5>
                <a href="{{ path('admin_canyon_index') }}" class="nav-button">tableau de bord</a>
            </div>
        </div>
    </div>
</div>
{% endif %}
{% if is_granted('ROLE_USER') %}
<div class="col-md-lg-6 text-center ">
    <p> Bonjour {{ app.user.firstName ~ ' ' ~ app.user.lastName }} !</p>
    <p>Vous pouvez désormais faire une demande de réservation.</p>
</div>
{% endif %}

<div class="row justify-content-center">
    <h1>
        découvrez les plus beaux canyons du jura <br />
        avec h2o canyon
    </h1>
</div>

<div id="carouselExampleIndicators" class="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block" src="{{ asset('assets/images/malvaux/malvaux_02.jpg') }}" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block" src="{{ asset('assets/images/coiserette/coiserette_03.jpg') }}" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block" src="{{ asset('assets/images/grosdar/grosdar_01.jpg') }}" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span><i class="fas fa-angle-double-left" aria-hidden="true"></i></span>
        <span class="sr-only">Précédente</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span><i class="fas fa-angle-double-right" aria-hidden="true"></i></span>
        <span class="sr-only">Suivante</span>
    </a>
</div>

<div>
    <h2>
        Jetez-vous à l'eau ...
    </h2>
</div>
<div class="content">
    <p>
        À 1H15 de BESANÇON <br />
        1H15 de LAUSANNE<br />
        et 1H30 de DIJON.
    </p>
    <p>
        A proximité des ROUSSES<br />
        de CLAIRVAUX-LES-LACS<br />
        de SAINT CLAUDE<br />
        et de METABIEF
    </p>
</div>

<h2>... en toute sécurité !</h2>

<div class="column">
    <img class="picture material" src="{{ asset('assets/images/guides/simon_02.jpg') }}" alt="Guide h20 Canyon">
    <p class="center">
        Laissez vous guider par des professionels diplômés d’état <br />
        pour découvrir le canyoning dans le Jura !
    </p>
</div>

<div class="content">
    <div>
        <a href="{{ path('canyons_index') }}" title="Découvrez les canyons">
            <div class="nav-button"><i class="far fa-eye"></i>les canyons</div>
        </a>
    </div>
    <div>
        {# <a href="{{ path('canyon_index') }}" title="Découvrez l'équipe"> #}
        <div class="nav-button"><i class="far fa-eye"></i>l'équipe</div>
        <!-- </a> -->
    </div>
</div>

<h2>Présentation</h2>

<div class="video">
    {# <a href="https://www.youtube.com/watch?v=WV7l0Azpz50">
<img src="{{ asset('assets/images/logo.png') }}" alt="Vidéo de présentation"> #}
    <iframe src="https://www.youtube.com/embed/WV7l0Azpz50" frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen></iframe>
    </a>
</div>

{% endblock %}

{% block javascripts %}
<script type="text/javascript" src="{{ asset('assets/js/modal.js')}}"></script>
{% endblock %}