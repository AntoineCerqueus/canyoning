{% extends 'base.html.twig' %}

{% block title %}H20 Canyon | {{ canyon.name }}{% endblock %}

{% block content %}

<h1>{{ canyon.name }}</h1>

<div id="carouselExampleIndicators" class="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="7"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block" src="{{ asset('assets/images/coiserette/coiserette_06.jpg') }}" alt="Première image">
        </div>
        <div class="carousel-item">
            <img class="d-block" src="{{ asset('assets/images/coiserette/coiserette_07.jpg') }}" alt="Deuxième image">
        </div>
        <div class="carousel-item">
            <img class="d-block" src="{{ asset('assets/images//coiserette/coiserette_03.jpg') }}" alt="Troisième image">
        </div>
        <div class="carousel-item">
            <img class="d-block" src="{{ asset('assets/images//coiserette/coiserette_02.jpg') }}" alt="Quatrième image">
        </div>
        <div class="carousel-item">
            <img class="d-block" src="{{ asset('assets/images//coiserette/coiserette_05_resize.jpg') }}" alt="Cinquième image">
        </div>
        <div class="carousel-item">
            <img class="d-block" src="{{ asset('assets/images//coiserette/coiserette_01.jpg') }}" alt="Sixième image">
        </div>
        <div class="carousel-item">
            <img class="d-block" src="{{ asset('assets/images//coiserette/coiserette_04_resize.jpg') }}" alt="Septième image">
        </div>
        <div class="carousel-item">
            <img class="d-block" src="{{ asset('assets/images//coiserette/coiserette_08_resize.jpg') }}" alt="Huitième image">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span><i class="fas fa-angle-double-left" aria-hidden="true"></i></span>
        <span class="sr-only">Précedente</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span><i class="fas fa-angle-double-right" aria-hidden="true"></i></span>
        <span class="sr-only">Suivante</span>
    </a>
</div>

    <p class="top">{{ canyon.description }}</p>

<h2>Informations</h2>
<div class="content">
    Durée : {{ canyon.halfDay }}
</div>


{% endblock %}
