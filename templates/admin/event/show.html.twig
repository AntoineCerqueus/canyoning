{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Evenements</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Début</th>
                <td>{{ event.startAt ? event.startAt|date('Y-m-d H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ event.endAt ? event.endAt|date('Y-m-d H:i') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_event_index') }}">Retour à la liste</a>

    <a href="{{ path('admin_event_edit', {'id': event.id}) }}">Modifier</a>

    {{ include('admin/event/_delete_form.html.twig') }}
{% endblock %}
