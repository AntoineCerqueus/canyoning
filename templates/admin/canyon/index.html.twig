{% extends 'admin/layout.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block content %}
<h1 class="title">Tableau de bord</h1>

{% for canyon in canyons %}
<table class="table">
    <tbody>
        <h2>{{ canyon.name }}</h2>
        <tr>
            <th>Description</th>
            <td>{{ canyon.description }}</td>
        </tr>
        <tr>
            <th>Résumé</th>
            <td>{{ canyon.shortDescription }}</td>
        </tr>
        <tr>
            <th>Durée</th>
            <td>{{ canyon.duration }}</td>
        </tr>
        <tr>
            <th>Places disponibles </th>
            <td>{{ canyon.numberOfPlaces }}</td>
        </tr>
        <tr>
            <th>Niveau</th>
            <td>{{ canyon.level }}</td>
        </tr>
        <tr>
            <th>Age requis</th>
            <td>{{ canyon.ageNeeded }}</td>
        </tr>
        <tr>
            <th>Lieu</th>
            <td>{{ canyon.location }}</td>
        </tr>
        <tr>
            <th>Départ</th>
            <td>{{ canyon.meetingPoint }}</td>
        </tr>
        <tr>
            <th>Localisation</th>
            <td>{{ canyon.gps }}</td>
        </tr>
        <tr>
            <th>Rappel</th>
            <td>{{ canyon.abseiling }}</td>
        </tr>
        <tr>
            <th>Pré-requis</th>
            <td>{{ canyon.knowledge }}</td>
        </tr>
    </tbody>
</table>


<h3 class="text-center mb-3">Actions</h3>
<div class="row d-flex justify-content-around mb-2">
    {# le path mappe la fonction grâce au "name" rentré #}
    <a href="{{ path('admin_canyon_edit', {'id': canyon.id}) }}">
        <button type="button" class="btn btn-warning mt-4">Modifier</button>
    </a>
    <a href="{{ path('admin_canyon_show_events', {'id': canyon.id}) }}">
        <button type="button" class="btn btn-success text-body mt-4">Gestion des évènements</button>
    </a>
    <a href="{{ path('admin_canyon_show_prices', {'id': canyon.id}) }}">
        <button type="button" class="btn btn-success text-body mt-4">Gestion des Prix</button>
    </a>
    <div class="mt-4">{{ include('admin/canyon/_delete_form.html.twig') }}</div>
</div>

{% else %}
<div colspan="13"> Aucune entrée trouvée </div>
{% endfor %}

{% endblock %}

