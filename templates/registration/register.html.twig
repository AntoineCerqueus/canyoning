{% extends 'base.html.twig' %}

{% block title %}Création de compte{% endblock %}

{% block content %}
{% for flashError in app.flashes('verify_email_error') %}
<div class="alert alert-danger" role="alert">{{ flashError }}</div>
{% endfor %}

<h1>inscription</h1>

{{ form_start(registrationForm) }}
{{ form_row(registrationForm.lastName, {
    'label': 'Nom',
    'attr': {'placeholder': 'Ex : Mi'}
        }) }}
{{ form_row(registrationForm.firstName, {
    'label': 'Prénom',
    'attr': {'placeholder': 'Ex: Jean'}
        }) }}
{{ form_row(registrationForm.phone, {
            'label': 'Téléphone',
            'attr': {'placeholder': 'Tapez ici votre numéro de téléphone'}
                }) }}
{{ form_row(registrationForm.email, {
    'label': 'Adresse mail',
    'attr': {'placeholder': 'Ex: jean.mi@gmail.com'}
        }) }}
{{ form_row(registrationForm.plainPassword, {
    'label': 'Mot de passe',
    'attr': {'placeholder': 'Tapez ici votre mot de passe'}
        }) }}
{# {{ form_row(registrationForm.confirmPassword, {
            'label': 'Confirmez votre mot de passe',
            'attr': {'placeholder': 'Retapez ici votre mot de passe'}
                }) }} #}
{{ form_row(registrationForm.agreeTerms, {
            'label' : 'Acceptez les termes du contrat'
        }) }}

<input type="submit" class="nav-button" value="Inscription" />

{{ form_end(registrationForm) }}
{% endblock %}