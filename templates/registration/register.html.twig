{% extends 'admin/layout.html.twig' %}

{% block title %}Création de compte{% endblock %}

{% block body %}
{% for flashError in app.flashes('verify_email_error') %}
<div class="alert alert-danger" role="alert">{{ flashError }}</div>
{% endfor %}

<h1>Création de votre compte</h1>

{{ form_start(registrationForm) }}
{{ form_row(registrationForm.lastName, {
    'label': 'Nom',
    'attr': {'placeholder': 'Ex : Martin'}
        }) }}
{{ form_row(registrationForm.firstName, {
    'label': 'Prénom',
    'attr': {'placeholder': 'Ex: Jacques'}
        }) }}
{{ form_row(registrationForm.email, {
    'label': 'Adresse mail',
    'attr': {'placeholder': 'Ex: jacques.martin@gmail.com'}
        }) }}
{{ form_row(registrationForm.plainPassword, {
    'label': 'Mot de passe',
    'attr': {'placeholder': 'Rentrez ici votre mot de passe...'}
        }) }}
<!-- {{ form_row(registrationForm.agreeTerms, {
            label : 'Acceptez les termes du contrat'
        }) }} -->

<button type="submit" class="btn">Enregistrer</button>
<div>
    <a href="{{ path('home') }}" title="Retour à l'accueil">
        <div class="nav-button">Retour à l'accueil</div>
    </a>
</div>
{{ form_end(registrationForm) }}
{% endblock %}